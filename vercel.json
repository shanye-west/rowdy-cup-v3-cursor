{
    "version": 2,
    "buildCommand": "npm run build:client",
    "outputDirectory": "dist/public",
    "installCommand": "npm install",
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "https://rowdy-cup-api.onrender.com/api/$1"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/(.*)",
        "dest": "/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }